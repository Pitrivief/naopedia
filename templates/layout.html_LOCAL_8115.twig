<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenue sur Naopedia{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        {% block stylesheets %}
               <link href="{{ asset("build/css/app.min.css") }}" rel="stylesheet" type="text/css">
        {% endblock %}
    </head>
    <body style="text-align: center; background-color: #1E5D93;">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="{{path('homepage')}}">
                <img style="max-width:60px;width:100%" src="{{ asset("images/NAOlogobleu.svg") }}" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('map')}}">La carte</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a href="{{path('userpage',{'username':app.user.username}  )}}">mon profil</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN')%}
                        <li>
                            <a class="nav-link" href="{{path('admin')}}">Administration</a>
                        </li>
                        {% endif %}

                        <li class="nav-item">
                            <a class="nav-link" href="{{path('post')}}">Poster une observation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('logout')}}">se d√©conecter</a>
                        </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('login')}}">Se connecter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('signin')}}">S'inscrire</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

{% block content %}{% endblock %}

{% block javascript %}
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
{% endblock %}

</body>
</html>
