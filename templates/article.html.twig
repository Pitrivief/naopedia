{% extends "layout.html.twig" %}
{% block content %}
<div class ="container article center-block ">
    <div class="row">
        <!-- Post Content Column -->
        <div class="col-lg-8">
          <!-- Title -->
          <h1 class="articleTitle ">{{article.title}}</h1>
          <!-- Author -->
          <p class="lead">
            Un article de
            <a href="#">{{article.author}}</a>
          </p>
          <hr>
          <!-- Date/Time -->
          <p>Posted on January 1, 2018 at 12:00 PM</p>
          <hr>
          <!-- Preview Image -->
          {% if article.images[0] is defined %}
          <img src="{{ vich_uploader_asset(article.images[0],"imageFile", 'App\\Entity\\Image') }}" alt="{{ article.images[0].alt }}" class="img-responsive img-width"></div>
          {% endif %}
          <hr>
          <!-- Post Content -->
          <p class="lead">{{article.content| raw}}</p>

        </div>
    </div>
</div>
    <!-- /.container -->

{% endblock %}
