{% extends "layout.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset("build/css/app.min.css") }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}
    <div class="birdAppContainer container-fluid" data-birdsloaded="{{ birdsloaded|json_encode|e('html_attr') }}">
        <div class="row">
            <div class="col-sm-2 filter-column">
                <h2>Recherche</h2>
                <input class="search" placeholder="Quel oiseau?">
                <input type="text" placeholder="Quelles dates?" class="dates">
                <div class="filters" style="min-height:20px;margin:1em 0em; border: 2px dashed lightslategray"></div>
                <input type="button" value="Rechercher" class="searchBirds">
                <hr>
                <h2>Actions</h2>
                <button type="button" class="btn btn-light" id="addObservation">Ajouter une observation</button>
            </div>
            <div class="map col-sm-10"></div>
        </div>


    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Qu'avez vous observé?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form >
                        <div class="minimapContainer">
                            <div id="minimap"></div>
                            <input type="hidden" name="">
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Espèce(vide si inconnue):</label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="form-group">
                            <label for="message-text" class="col-form-label">Message:</label>
                            <textarea class="form-control" id="message-text"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="file-upload" class="col-form-label">Image*:</label>
                            <input class="form-control" type="file" id="file-upload"/>
                            <label class="btn btn-block btn-lg btn-secondary" for="file-upload" >
                                <span id="image-before-preview">Sélectionner une image</span>
                                <img src="" id="image-preview">
                            </label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-block">Envoyer Observation</button>


                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
            integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
    crossorigin=""></script>
    <script src="{{ asset("build/js/app.min.js") }}"></script>
    <script src="{{ asset("build/js/datepicker.min.js") }}"></script>
{% endblock %}