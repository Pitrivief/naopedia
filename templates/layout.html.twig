<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenue sur Naopedia{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        {% block stylesheets %}
        <!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
      {% endblock %}
    </head>
    <body style="text-align: center; background-color: #1E5D93;">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="{{path('homepage')}}">
            <img style="max-width:60px;width:100%" src="{{ asset("images/NAOlogobleu.svg") }}" alt=""><br></a>
          </div>
          <ul class="nav navbar-nav">
            {% if app.user %}
              <li><a href="{{path('userpage',{'username':app.user.username}  )}}">mon profil</a></li>
              {% if is_granted('ROLE_ADMIN')%}
                 <li><a href="{{path('admin')}}">Administration</a></li>
               {% endif %}
              <li><a href="{{path('post')}}">Poster une observation</a></li>
              <li><a href="{{path('logout')}}">se d√©conecter</a></li>
            {% else %}
              <li><a href="{{path('login')}}">Se connecter</a></li>
              <li><a href="{{path('signin')}}">S'inscrire</a></li>
            {% endif %}
          </ul>
        </div>
      </nav>
      <nav>

      </nav>
      {% for label, messages in app.flashes %}
          {% for message in messages %}
              <div class="flash-{{ label }}">
                  {{ message }}
              </div>
          {% endfor %}
      {% endfor %}

    {% block content %}{% endblock %}
    </body>
</html>
