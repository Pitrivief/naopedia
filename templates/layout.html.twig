                </li>  
                <li class="nav-item">
                    <a class="nav-link {{ app.request.attributes.get('_route') == "birds" ? "active" :"" }}" href="{{ path('birds') }}">Les oiseaux</a>
                </li>
                <li class="nav-item"> 
                    <a class="nav-link {{ app.request.attributes.get('_route') == "articles" ? "active" :"" }}" href="{{ path('articles') }}">Le Blog</a> 
                </li>

            </ul> 
