            <ul>
                <li><a class="" href="https://www.facebook.com/naopedia/" target="_blank" role="button"><img src="{{ asset("images/facebook.svg") }}" class="picto2" alt="facebook"/></a></li>
                <li><a class="" href="https://twitter.com/Naopedia" target="_blank" role="button"><img src="{{ asset("images/twitter.svg") }}" class="picto2" alt="twitter"/></a></li>
                <li><a class="" href="https://www.pinterest.fr/naopedia/" target="_blank" role="button"><img src="{{ asset("images/pinterest.svg") }}" class="picto2" alt="pinterest"/></a></li>
            </ul>
        </div>
        <div id="main-content" class="container-fluid main-content">  
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
