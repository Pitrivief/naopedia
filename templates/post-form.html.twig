{{ form_start(form) }}
<div class="minimapContainer">
    <div class="minimap"></div>
    {{ form_widget(form.geoloc) }}

</div>
<div class="form-group">
    <label for="recipient-name" class="col-form-label">Espèce(vide si inconnue):</label>
    {{ form_widget(form.bird) }}
    <div class="selected-bird"></div>
    <input type="text" class="form-control" placeholder='Quel oiseau?' data-target="{{ form.bird.vars.id }}" id="recipient-name">
</div>
<div class="form-group">
    <label for="message-text" class="col-form-label">Message:</label>
    
    {#<textarea class="form-control" id="message-text"></textarea>#}
    {{ form_widget(form.description) }}
</div>
    
<div class="form-group">
    <label for="{{ form.image.children.imageFile.children.file.vars.id }}" class="col-form-label">Image*:</label>
    {{ form_errors(form.image) }}
    {{ form_widget(form.image) }}
    <label class="btn btn-block btn-lg btn-secondary" id="file-upload-btn" for="{{ form.image.children.imageFile.children.file.vars.id }}" >
        <span id="image-before-preview">Sélectionner une image</span>
        <img src="" id="image-preview">
    </label>
</div>
{{ form_end(form) }}