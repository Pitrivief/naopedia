
{% extends ajaxLogin is defined ? "ajaxmodal.html.twig" : "layout.html.twig"  %}

{% block Modaltitle %}
    <h2>Connectez vous</h2>
{% endblock %}
{% block content %}
    <div class="container justify-content-center">
        <div class="form-wrapper">
            <div class="form-div">
            {% if ajaxLogin is not defined %}
                <h2>Connectez vous</h2>
            {% endif %}
            {% if error %} 
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            
            <form action="{{ path('login') }}" method="post">

                <div class="form-group">
                    <label for="username">Pseudo ou Email : </label>
                    <input type="text" id="username" name="_username" class="form-control" placeholder="Pseudo ou Email" value="{{ last_username }}" />
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" class="form-control" placeholder="Mot de passe" name="_password" />
                </div>
                {% if ajaxLogin is defined %}
                    <input type="hidden" name="_target_path" value="{{ path('ajaxLoginSuccess') }}" />
                {% else %}    
                    <input type="hidden" name="_target_path" value="{{ path('loginSuccess') }}" />
                {% endif %}
                {#Fs (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}
                <div>
                    <button class="btn btn-primary btn-lg btn-submit btn-block" type="submit">Se connecter</button>
                    <a href="/resetPassword" class="btn btn-link" >Mot de passe oubli√© ? </a>
                </div>
            </form>  
            </div>    
            <hr>
            <div class="alert alert-info" >
                Ou <a href="/signin" >Inscrivez-vous</a>
            </div>
        </div>

    </div>
{% endblock %}
