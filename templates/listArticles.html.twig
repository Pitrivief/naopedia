{% extends "layout.html.twig" %}
{% block content %}
{# total items count
<div class="count">
    {{ articleslist.getTotalItemCount }} r√©sultat(s)
</div>
#}
<div class="blog ">
  <h2 > LE BLOG </h2>
{% if trendArticle is defined %}
  <div id="mainArticle" class="section row justify-content-center ">
      <div class="col-10 col-md-8 ">
          <div class="jumbotron">
              <h2 class="text-center">{{trendArticle.title}}</h2>
              <div class="img-ok"><img src="{{ vich_uploader_asset(trendArticle.images[0],"imageFile", 'App\\Entity\\Image') }}" alt="{{ trendArticle.images[0].alt }}" class="img-responsive img-width"></div>
              <div class="row">
                  <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 ">
                      <a  href="{{ path("map") }}" role="button" class="btn btn-danger btn-lg ">
                        <p>Lire l'article</p>
                      </a>
                  </div>
              </div>

          </div>
      </div>
  </div>
  {% endif %}
  <div class="container">

      {% for article in articleslist %}
      <div class="card col-lg-3">
          <div class="card-block">
              <h3 class="card-title">{{article.title}}</h3>
               {% if article.images[0] is defined %}
                    <div class="img-ok"><img src="{{ vich_uploader_asset(article.images[0],"imageFile", 'App\\Entity\\Image') }}" alt="{{ article.images[0].alt }}" class="img-responsive img-width"></div>
               {% else %}
                    <div class="img-ok"><img src="{{asset("images/bird.png")}}" alt="Image oiseau" class="img-responsive img-width"></div>
               {% endif %}
              <p class="card-text">Un article de  : <a class)"linkAuthor" href="{{ path('userpage', {'username': article.author})  }}">{{article.author}}</a> </br></p>
              <a href="{{ path('article', {'id': article.id }) }}" class="btn btn-primary">Lire l'article</a>
          </div>
      </div>
      {% endfor %}
      <div class="text-center">{{ knp_pagination_render(articleslist) }}</div>
  </div>

</div>


{% endblock %}
